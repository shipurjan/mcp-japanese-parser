{
  "name": "mcp-japanese-parser",
  "version": "0.1.0",
  "description": "",
  "license": "AGPL-3.0-or-later",
  "author": "Cyprian Zdebski <shipurjan@gmail.com> (https://github.com/shipurjan)",
  "homepage": "https://github.com/shipurjan/mcp-japanese-parser#readme",
  "bugs": "https://github.com/shipurjan/mcp-japanese-parser/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shipurjan/mcp-japanese-parser.git"
  },
  "type": "module",
  "bin": {
    "mcp-japanese-parser": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && rollup -c && shx chmod +x dist/*.js",
    "prepare": "husky && npm run submodules && npm run build",
    "submodules": "git submodule update --init --recursive",
    "watch": "tsc --watch",
    "docker:build": "docker compose -f ichiran/docker-compose.yml -f docker-compose.yml up --force-recreate --no-deps --build",
    "format": "prettier --write --cache . && eslint . --cache --fix",
    "lint": "eslint . --cache --quiet",
    "lint:types": "tsc --skipLibCheck --noEmit",
    "test": "jest --config=jest.config.mjs --coverage",
    "check": "npm run format && npm run lint && npm run lint:types && npm run test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.15.0",
    "zod": "3.25.76",
    "zod-to-json-schema": "3.24.6"
  },
  "devDependencies": {
    "@eslint/js": "9.30.1",
    "@jest/globals": "30.0.4",
    "@rollup/plugin-terser": "0.4.4",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/jest": "30.0.0",
    "@types/node": "22.16.1",
    "@typescript-eslint/parser": "8.36.0",
    "eslint": "9.30.1",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.5.1",
    "globals": "16.3.0",
    "husky": "9.1.7",
    "jest": "30.0.4",
    "lint-staged": "16.1.2",
    "prettier": "3.6.2",
    "rollup": "4.44.2",
    "shx": "0.4.0",
    "ts-jest": "29.4.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.36.0"
  }
}
